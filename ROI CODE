import { useState } from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";

export default function RfidAssessmentCalculator() {
  const [useCaseScore, setUseCaseScore] = useState(0);
  const [feasibilityScore, setFeasibilityScore] = useState(8);
  const [initialCost, setInitialCost] = useState(120000);
  const [annualBenefit, setAnnualBenefit] = useState(220000);

  const roi = ((annualBenefit - initialCost) / initialCost) * 100;
  const paybackMonths = (initialCost / (annualBenefit / 12)).toFixed(1);

  return (
    <div className="p-6 max-w-4xl mx-auto grid gap-6">
      <h1 className="text-3xl font-bold">RFID Assessment Calculator</h1>

      <Card className="rounded-2xl shadow">
        <CardContent className="p-4 space-y-2">
          <h2 className="text-xl font-semibold">1. Use Case Fit</h2>
          <p>Score how suitable RFID is for this operation.</p>
          <input
            type="range"
            min="0"
            max="10"
            value={useCaseScore}
            onChange={(e) => setUseCaseScore(Number(e.target.value))}
            className="w-full"
          />
          <p className="font-medium">Score: {useCaseScore} / 10</p>
        </CardContent>
      </Card>

      <Card className="rounded-2xl shadow">
        <CardContent className="p-4 space-y-2">
          <h2 className="text-xl font-semibold">2. Technical Feasibility</h2>
          <p>Higher scores mean fewer RF challenges.</p>
          <input
            type="range"
            min="0"
            max="10"
            value={feasibilityScore}
            onChange={(e) => setFeasibilityScore(Number(e.target.value))}
            className="w-full"
          />
          <p className="font-medium">Score: {feasibilityScore} / 10</p>
        </CardContent>
      </Card>

      <Card className="rounded-2xl shadow">
        <CardContent className="p-4 space-y-4">
          <h2 className="text-xl font-semibold">3. Cost & ROI</h2>
          <div className="grid grid-cols-2 gap-4">
            <label>
              Initial Investment ($)
              <input
                type="number"
                value={initialCost}
                onChange={(e) => setInitialCost(Number(e.target.value))}
                className="w-full border rounded p-1"
              />
            </label>
            <label>
              Annual Benefit ($)
              <input
                type="number"
                value={annualBenefit}
                onChange={(e) => setAnnualBenefit(Number(e.target.value))}
                className="w-full border rounded p-1"
              />
            </label>
          </div>
          <p className="font-medium">ROI: {roi.toFixed(1)}%</p>
          <p className="font-medium">Payback: {paybackMonths} months</p>
        </CardContent>
      </Card>

      <Card className="rounded-2xl shadow">
        <CardContent className="p-4">
          <h2 className="text-xl font-semibold">Recommendation</h2>
          <p>
            {useCaseScore >= 6 && feasibilityScore >= 7
              ? "Proceed to RFID pilot design and validation."
              : "Re-evaluate use case or consider barcodes."}
          </p>
        </CardContent>
      </Card>

      <Button className="rounded-2xl">Export Assessment</Button>
    </div>
  );
}
